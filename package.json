{
  "name": "@bluecat/pelagos",
  "version": "6.3.3",
  "description": "UI components",
  "license": "ISC",
  "scripts": {
    "init-scope": "npm config set @bluecat:registry https://artifactory.bluecatlabs.net/api/npm/bcn-npm-dev-local/ && npm config set //artifactory.bluecatlabs.net/api/npm/bcn-npm-dev-local/:always-auth true",
    "set-token": "npm config set //artifactory.bluecatlabs.net/api/npm/bcn-npm-dev-local/:_authToken ${NPM_TOKEN}",
    "build:es5": "rm -rf es5 && BABEL_ENV=es5 babel -d es5 src && npm run copy-resources es5",
    "build:es6": "rm -rf es6 && BABEL_ENV=es6 babel -d es6 src && npm run copy-resources es6",
    "build": "npm run update-colors && npm run update-elevations && npm run update-fonts && npm run update-shadows && npm run update-spacing && npm run build:es5 && npm run build:es6",
    "test": "jest --verbose",
    "test-ci": "jest --ci --silent --reporters=jest-junit",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "lint": "eslint src",
    "lint-styles": "stylelint less src/**/*.less",
    "reformat": "prettier --write \"**/*.+(js|json|less)\"",
    "update-colors": "node scripts/update-colors",
    "update-elevations": "node scripts/update-elevations",
    "update-fonts": "node scripts/update-fonts",
    "update-shadows": "node scripts/update-shadows",
    "update-spacing": "node scripts/update-spacing",
    "copy-resources": "node scripts/copy-resources",
    "prepack": "npm t && npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.bluecatlabs.net:bluecat-uiux/pelagos.git"
  },
  "keywords": [
    "react"
  ],
  "files": [
    "index.js",
    "defs",
    "es5",
    "es6",
    "less"
  ],
  "dependencies": {
    "@bluecat/helpers": "^0.7.1",
    "@bluecat/l10n-core": "^0.1.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "focus-trap": "^6.6.0",
    "lodash-es": "^4.17.21",
    "prop-types": "^15.7.2",
    "redux-actions": "^2.6.5",
    "stable": "^0.1.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-do-expressions": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@bluecat/analyze-imports": "^0.1.4",
    "@bluecat/jest-helpers": "^2.0.1",
    "@bluecat/l10n-cli": "^0.1.1",
    "@bluecat/l10n-icu2obj": "^0.1.1",
    "@bluecat/l10n-jest": "^0.1.1",
    "@bluecat/l10n-loader": "^0.1.1",
    "@bluecat/l10n.macro": "^0.1.1",
    "@bluecat/stylelint-config": "^2.0.0",
    "@bluecateng/eslint-config-react": "^2.1.0",
    "@bluecateng/git-checks": "^1.0.0",
    "@storybook/addon-a11y": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/react": "^6.3.4",
    "babel-loader": "^8.2.2",
    "babel-plugin-macros": "^3.1.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.30.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "js-yaml": "^4.1.0",
    "less": "^4.1.1",
    "less-loader": "^7.3.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "storybook-addon-themes": "^6.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "yaml-loader": "^0.6.0"
  },
  "eslintConfig": {
    "extends": [
      "@bluecateng/react"
    ]
  },
  "stylelint": {
    "extends": [
      "@bluecat/stylelint-config"
    ]
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/jest_helpers/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "^react$": "@bluecat/jest-helpers/mock-react",
      "^react-dom$": "@bluecat/jest-helpers/mock-react",
      "^react/jsx-runtime$": "@bluecat/jest-helpers/mock-react",
      "\\.(less)$": "@bluecat/jest-helpers/style-mapper"
    },
    "setupFiles": [
      "<rootDir>/jest-helpers/setup-globals"
    ],
    "setupFilesAfterEnv": [
      "@bluecat/jest-helpers/setup-enzyme"
    ],
    "testEnvironment": "node",
    "timers": "fake",
    "transform": {
      "\\.js$": "babel-jest",
      "\\.po$": "@bluecat/l10n-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es|@bluecat)/)"
    ],
    "unmockedModulePathPatterns": [
      "enzyme",
      "intl-messageformat",
      "lodash-es",
      "prop-types",
      "react",
      "react-dom",
      "redux-actions",
      "l10n"
    ]
  },
  "jest-junit": {
    "outputDirectory": "build",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º "
  },
  "bc-l10n": {
    "hashLength": 3,
    "module": "src/l10n",
    "catalogPath": "src/l10n/{locale}",
    "locales": [
      "en"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings 0 --no-ignore",
      "prettier --write"
    ],
    "*.less": [
      "stylelint",
      "prettier --write"
    ],
    "*.strings.yaml": [
      "lint-icu-strings"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ]
  }
}
