{
  "name": "@bluecat/pelagos",
  "version": "3.1.0",
  "description": "UI components",
  "license": "ISC",
  "scripts": {
    "build:es5": "rm -rf es5 && BABEL_ENV=es5 babel -d es5 src && npm run copy-resources es5",
    "build:es6": "rm -rf es6 && BABEL_ENV=es6 babel -d es6 src && npm run copy-resources es6",
    "build": "npm run update-colors && npm run update-elevations && npm run update-fonts && npm run update-shadows && npm run update-spacing && npm run build:es5 && npm run build:es6",
    "test": "jest --verbose",
    "test-ci": "npm install && jest --ci --silent --reporters=jest-junit",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "lint": "eslint src",
    "lint-styles": "stylelint less src/**/*.less",
    "reformat": "prettier --write \"**/*.+(js|json|less)\"",
    "update-colors": "node scripts/update-colors",
    "update-elevations": "node scripts/update-elevations",
    "update-fonts": "node scripts/update-fonts",
    "update-shadows": "node scripts/update-shadows",
    "update-spacing": "node scripts/update-spacing",
    "copy-resources": "node scripts/copy-resources",
    "prepack": "npm t && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.bluecatlabs.net:bluecat-uiux/pelagos.git"
  },
  "keywords": [
    "react"
  ],
  "files": [
    "index.js",
    "defs",
    "es5",
    "es6",
    "less"
  ],
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@bluecat/babel-plugin-transform-hash-icu-key": "^0.5.0",
    "@bluecat/helpers": "^0.6.1",
    "@bluecat/strings-generator": "^0.5.0",
    "@bluecat/strings-jest": "^0.5.0",
    "@bluecat/strings-linter": "^0.5.1",
    "@bluecat/strings-loader": "^0.5.0",
    "@bluecat/stylelint-config": "^1.2.0",
    "@bluecateng/eslint-config-react": "^1.3.2",
    "@bluecateng/git-checks": "^0.3.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "babel-loader": "^8.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint": "^7.9.0",
    "focus-trap": "^6.0.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "js-yaml": "^3.14.0",
    "less": "^3.12.2",
    "less-loader": "^7.0.1",
    "lint-staged": "^10.4.0",
    "lodash-es": "^4.17.15",
    "prettier": "^2.1.2",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-transition-group": "^4.4.1",
    "redux-actions": "^2.6.5",
    "stable": "^0.1.8",
    "stylelint": "^13.7.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@bluecateng/react"
    ]
  },
  "stylelint": {
    "extends": [
      "@bluecat/stylelint-config"
    ]
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/jest_helpers/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 99,
        "functions": 100,
        "lines": 100,
        "statements": -1
      }
    },
    "moduleNameMapper": {
      "\\.(less)$": "<rootDir>/jest_helpers/style-mapper"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest_helpers/setup-enzyme"
    ],
    "timers": "fake",
    "transform": {
      "\\.js$": "babel-jest",
      "\\.strings\\.yaml$": "@bluecat/strings-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es|@bluecat)/)"
    ],
    "unmockedModulePathPatterns": [
      "enzyme",
      "intl-messageformat",
      "lodash-es",
      "prop-types",
      "react",
      "react-dom",
      "redux-actions",
      ".strings.yaml"
    ]
  },
  "jest-junit": {
    "outputDirectory": "build",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º "
  },
  "husky": {
    "hooks": {
      "pre-commit": "scripts/pre-commit-updates && lint-staged",
      "commit-msg": "check-git-msg",
      "pre-push": "check-git-commits"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings 0 --no-ignore",
      "prettier --write"
    ],
    "*.less": [
      "stylelint",
      "prettier --write"
    ],
    "*.strings.yaml": [
      "lint-icu-strings"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ]
  }
}
