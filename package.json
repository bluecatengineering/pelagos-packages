{
  "name": "@bluecat/pelagos",
  "version": "0.7.7",
  "description": "UI components",
  "license": "ISC",
  "scripts": {
    "build:es5": "rm -rf es5 && BABEL_ENV=es5 babel -d es5 src && npm run copy-resources es5",
    "build:es6": "rm -rf es6 && BABEL_ENV=es6 babel -d es6 src && npm run copy-resources es6",
    "build": "npm run update-colors && npm run build:es5 && npm run build:es6",
    "test": "jest --verbose",
    "test-ci": "npm install && jest --ci --silent --reporters=jest-junit",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "lint": "eslint --ext .js,.jsx src",
    "reformat": "prettier --write \"**/*.+(js|jsx|json|less)\"",
    "update-colors": "node scripts/update-colors",
    "copy-resources": "node scripts/copy-resources",
    "prepack": "npm t && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.bluecatlabs.net:bluecat-uiux/pelagos.git"
  },
  "keywords": [
    "react"
  ],
  "files": [
    "index.js",
    "es5",
    "es6",
    "less"
  ],
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@bluecat/eslint-config-react": "^0.1.3",
    "@bluecat/git-checks": "^0.1.0",
    "@bluecat/helpers": "^0.2.0",
    "@fortawesome/free-solid-svg-icons": "^5.8.2",
    "@storybook/addon-a11y": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "intl-messageformat": "^3.1.2",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^8.1.7",
    "lodash-es": "^4.17.11",
    "prettier": "^1.17.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-transition-group": "^4.0.1",
    "redux-actions": "^2.6.5",
    "stable": "^0.1.8"
  },
  "eslintConfig": {
    "extends": [
      "@bluecat/react"
    ]
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/jest_helpers/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 98,
        "functions": 99,
        "lines": 99,
        "statements": 99
      }
    },
    "moduleNameMapper": {
      "\\.(less)$": "<rootDir>/jest_helpers/style-mapper"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest_helpers/setup-enzyme"
    ],
    "timers": "fake",
    "transform": {
      "\\.jsx?$": "babel-jest",
      "\\.yml$": "<rootDir>/jest_helpers/yaml-processor"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es|@bluecat)/)"
    ],
    "unmockedModulePathPatterns": [
      "enzyme",
      "intl-messageformat",
      "lodash-es",
      "prop-types",
      "react",
      "react-dom",
      "redux-actions"
    ]
  },
  "jest-junit": {
    "output": "build/tests.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " ? "
  },
  "husky": {
    "hooks": {
      "pre-commit": "scripts/pre-commit-updates && lint-staged",
      "commit-msg": "check-git-msg",
      "pre-push": "check-git-commits"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix --max-warnings 0 --no-ignore",
        "prettier --write",
        "git add"
      ],
      "*.{json,less,md,yml}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  }
}
