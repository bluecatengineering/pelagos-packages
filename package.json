{
  "name": "@bluecat/pelagos",
  "version": "7.0.1",
  "description": "UI components",
  "license": "ISC",
  "sideEffects": [
    "*.less"
  ],
  "scripts": {
    "init-scope": "npm config set @bluecat:registry https://artifactory.bluecatlabs.net/api/npm/bcn-npm-dev-local/",
    "fix-auth": "npm config set //artifactory.bluecatlabs.net/api/npm/bcn-npm-dev-local/:always-auth true",
    "set-token": "npm config set //artifactory.bluecatlabs.net/api/npm/bcn-npm-dev-local/:_authToken ${NPM_TOKEN}",
    "build:dist": "rm -rf dist && babel -d dist --env-name production src && npm run copy-resources dist",
    "build": "npm run update-colors && npm run update-elevations && npm run update-fonts && npm run update-shadows && npm run update-spacing && npm run update-themes && npm run build:dist",
    "test": "jest --verbose",
    "test-ci": "jest --ci --silent --reporters=jest-junit --coverageReporters=cobertura",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "lint": "eslint src",
    "lint-styles": "stylelint less src/**/*.less",
    "reformat": "prettier --write \"**/*.+(js|json|less)\"",
    "update-colors": "node scripts/update-colors",
    "update-elevations": "node scripts/update-elevations",
    "update-fonts": "node scripts/update-fonts",
    "update-shadows": "node scripts/update-shadows",
    "update-spacing": "node scripts/update-spacing",
    "update-themes": "node scripts/update-themes",
    "copy-resources": "node scripts/copy-resources",
    "prepack": "npm t && npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.bluecatlabs.net:bluecat-uiux/pelagos.git"
  },
  "keywords": [
    "react"
  ],
  "files": [
    "defs",
    "dist",
    "less"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./defs/": "./defs/",
    "./less/": "./less/"
  },
  "dependencies": {
    "@bluecat/helpers": "^0.9.2",
    "@bluecat/l10n-core": "^0.1.1",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "focus-trap": "^6.7.1",
    "lodash-es": "^4.17.21",
    "prop-types": "^15.8.1",
    "stable": "^0.1.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-do-expressions": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@bluecat/analyze-imports": "^0.1.4",
    "@bluecat/jest-helpers": "^2.0.1",
    "@bluecat/l10n-cli": "^0.1.1",
    "@bluecat/l10n-icu2obj": "^0.1.1",
    "@bluecat/l10n-jest": "^0.2.0",
    "@bluecat/l10n-loader": "^0.1.1",
    "@bluecat/l10n.macro": "^0.1.1",
    "@bluecat/stylelint-config": "^3.0.1",
    "@bluecateng/commitlint-config-bluecateng": "^1.0.1",
    "@bluecateng/eslint-config-react": "^3.0.1",
    "@bluecateng/git-check-push": "^1.0.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@storybook/addon-a11y": "^6.4.12",
    "@storybook/addon-essentials": "^6.4.12",
    "@storybook/react": "^6.4.12",
    "babel-loader": "^8.2.3",
    "babel-plugin-macros": "^3.1.0",
    "cheerio": "^1.0.0-rc.10",
    "enzyme": "^3.11.0",
    "eslint": "^8.6.0",
    "husky": "^8.0.1",
    "jest": "^28.0.2",
    "jest-junit": "^13.0.0",
    "less": "^4.1.2",
    "less-loader": "^7.3.0",
    "lint-staged": "^13.0.2",
    "postcss": "^8.4.5",
    "postcss-less": "^6.0.0",
    "prettier": "^2.5.1",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "standard-version": "^9.3.2",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "yaml": "^2.0.1",
    "yaml-loader": "^0.6.0"
  },
  "eslintConfig": {
    "extends": [
      "@bluecateng/react"
    ]
  },
  "stylelint": {
    "extends": [
      "@bluecat/stylelint-config"
    ],
    "customSyntax": "postcss-less"
  },
  "commitlint": {
    "extends": [
      "@bluecateng/commitlint-config-bluecateng"
    ]
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/jest_helpers/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "fakeTimers": {
      "enableGlobally": true
    },
    "moduleNameMapper": {
      "^react$": "@bluecat/jest-helpers/mock-react",
      "^react-dom$": "@bluecat/jest-helpers/mock-react",
      "^react/jsx-runtime$": "@bluecat/jest-helpers/mock-react",
      "\\.(less)$": "@bluecat/jest-helpers/style-mapper"
    },
    "setupFiles": [
      "<rootDir>/jest-helpers/setup-globals"
    ],
    "setupFilesAfterEnv": [
      "@bluecat/jest-helpers/setup-enzyme"
    ],
    "transform": {
      "\\.js$": "babel-jest",
      "\\.po$": "@bluecat/l10n-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es|@bluecat)/)"
    ],
    "unmockedModulePathPatterns": [
      "enzyme",
      "lodash-es",
      "elementOfType",
      "prop-types",
      "react",
      "react-dom",
      "l10n"
    ]
  },
  "jest-junit": {
    "outputDirectory": "build",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º "
  },
  "bc-l10n": {
    "hashLength": 3,
    "module": "src/l10n",
    "catalogPath": "src/l10n/{locale}",
    "locales": [
      "en"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings 0 --no-ignore",
      "prettier --write"
    ],
    "*.less": [
      "stylelint",
      "prettier --write"
    ],
    "*.strings.yaml": [
      "lint-icu-strings"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ]
  }
}
