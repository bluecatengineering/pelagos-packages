{
  "name": "pelagos-packages",
  "description": "Pelagos packages",
  "license": "ISC",
  "private": true,
  "scripts": {
    "test": "jest --verbose",
    "test-ci": "jest --ci --silent --reporters=jest-junit --coverageReporters=cobertura",
    "storybook": "storybook dev -p 9001",
    "build-storybook": "storybook build -o build/storybook",
    "start": "lerna run prepack && npm run storybook",
    "lint": "eslint .",
    "lint-ci": "eslint . -f @microsoft/eslint-formatter-sarif -o build/eslint-results.sarif",
    "lint-styles": "stylelint **/*.less",
    "reformat": "prettier --write \"**/*.+(js|json|less)\"",
    "prepack": "npm t",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bluecatengineering/pelagos-packages.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-do-expressions": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@bluecateng/commitlint-config-bluecateng": "^1.0.1",
    "@bluecateng/eslint-config-node": "^4.0.0",
    "@bluecateng/eslint-config-react": "^4.0.0",
    "@bluecateng/git-check-push": "^1.0.0",
    "@bluecateng/l10n-cli": "^0.1.5",
    "@bluecateng/l10n-icu2obj": "^0.1.5",
    "@bluecateng/l10n-jest": "^0.3.0",
    "@bluecateng/l10n-loader": "^0.1.5",
    "@bluecateng/l10n.macro": "^0.1.6",
    "@bluecateng/prettier-config": "^1.0.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@storybook/addon-a11y": "^7.0.0",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-webpack5": "^7.0.0",
    "@types/jest": "^29.5.1",
    "babel-loader": "^9.0.0",
    "babel-plugin-macros": "^3.1.0",
    "chromatic": "^7.2.0",
    "enzyme": "^3.11.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.6.0",
    "eslint-plugin-regexp": "^1.12.0",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "jest-junit": "^16.0.0",
    "jsdoc-api": "^8.0.0",
    "jsdoc-parse": "^6.1.0",
    "lerna": "^7.0.0",
    "less": "^4.1.2",
    "less-loader": "^11.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.5",
    "postcss-less": "^6.0.0",
    "prettier": "^3.0.0",
    "raw-loader": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.0",
    "stylelint": "^15.9.0",
    "stylelint-config-standard": "^34.0.0",
    "yaml": "^2.0.1",
    "yaml-loader": "^0.8.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@bluecateng/prettier-config",
  "eslintConfig": {
    "plugins": [
      "regexp"
    ],
    "extends": [
      "@bluecateng/react",
      "plugin:regexp/recommended"
    ],
    "globals": {
      "showOpenFilePicker": false
    },
    "rules": {
      "regexp/no-unused-capturing-group": "off"
    }
  },
  "stylelint": {
    "extends": [
      "./packages/stylelint-config"
    ],
    "customSyntax": "postcss-less",
    "rules": {
      "no-invalid-double-slash-comments": null
    }
  },
  "commitlint": {
    "extends": [
      "@bluecateng/commitlint-config-bluecateng"
    ]
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/jest-helpers/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "fakeTimers": {
      "enableGlobally": true
    },
    "moduleNameMapper": {
      "^react$": "@bluecateng/jest-helpers/mock-react",
      "^react-dom$": "@bluecateng/jest-helpers/mock-react",
      "^react/jsx-runtime$": "@bluecateng/jest-helpers/mock-react",
      "\\.(less)$": "@bluecateng/jest-helpers/style-mapper"
    },
    "setupFiles": [
      "<rootDir>/jest-helpers/setup-globals"
    ],
    "setupFilesAfterEnv": [
      "@bluecateng/jest-helpers/setup-enzyme"
    ],
    "transform": {
      "\\.js$": "babel-jest",
      "\\.po$": "@bluecateng/l10n-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es|@bluecateng)/)"
    ],
    "unmockedModulePathPatterns": [
      "enzyme",
      "lodash-es",
      "elementOfType",
      "prop-types",
      "react",
      "react-dom",
      "stylelint",
      "l10n"
    ]
  },
  "jest-junit": {
    "outputDirectory": "build"
  },
  "bc-l10n": {
    "hashLength": 3,
    "sourcePath": "packages/pelagos/src",
    "module": "packages/pelagos/src/l10n",
    "catalogPath": "packages/pelagos/src/l10n/{locale}",
    "locales": [
      "en",
      "es"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings 0 --no-ignore",
      "prettier --write"
    ],
    "*.less": [
      "stylelint",
      "prettier --write"
    ],
    "*.{json,md,mdx,yaml,yml}": [
      "prettier --write"
    ]
  }
}
